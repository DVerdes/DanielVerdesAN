<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Propiedades de conexion a base de datos-->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1445;database=Pruebas;trustServerCertificate=true;encrypt=true;</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">ADMIN0</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.default_schema">dbo</property>

        <property name="hibernate.show_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">validate</property>

        <property name="hibernate.current_session_context_class">thread</property>

        <!--MAPEOS-->
        <mapping resource="Departamento.hbm.xml"/>


    </session-factory>
</hibernate-configuration>