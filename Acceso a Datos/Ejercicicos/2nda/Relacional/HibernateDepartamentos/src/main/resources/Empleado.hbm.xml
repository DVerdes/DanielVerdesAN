<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibertante Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.model.Empleado" table="Empleados">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="nombre" type="string" column="nombre"/>
        <property name="apellido" type="string" column="apellido"/>
        <property name="pinAcceso" type="string" column="pinAcceso"/>
        <property name="salario" type="double" column="salario"/>
        <property name="fechaContratacion" type="date" column="fechaContratacion"/>
        <property name="direccion" type="string" column="direccion"/>
        <property name="telefono" type="string" column="telefono"/>
        <property name="email" type="string" column="email"/>
        <property name="idDepartamento" type="int" column="idDepartamento"/>





    </class>
</hibernate-mapping>