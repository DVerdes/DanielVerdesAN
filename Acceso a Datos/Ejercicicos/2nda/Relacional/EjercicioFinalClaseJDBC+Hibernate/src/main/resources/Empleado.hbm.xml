<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Empleado" table="Empleados">
        <id name="id" column="id" >
            <generator class="native"></generator>
        </id>
        <property name="nombre" type="string" column="nombre"></property>
        <property name="apellido" type="string" column="apellido"></property>
        <property name="pinAcceso" type="string" column="pinAcceso"></property>
        <property name="salario" type="big_decimal" column="salario"></property>
        <property name="fechaContratacion" type="date" column="fechaContratacion"></property>
        <property name="direccion" type="string" column="direccion"></property>
        <property name="telefono" type="string" column="telefono"></property>
        <property name="email" type="string" column="email"></property>
        <property name="idDepartamento" type="int" column="idDepartamento"></property>


    </class>

</hibernate-mapping>