<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Version 8 MySQL hiberante-cfg.xml example for Hibernate 5 -->
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=Pruebas ;trustServerCertificate=true ;encrypt=true</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">ADMIN0</property>
        <property name="hibernate.default_schema">dbo</property>
        <!--property name="dialect">org.hibernate.dialect.MySQLDialect</property-->

        <property name="hibernate.show_sql">true</property> <!--muestra en consola el sql generado -->
        <property name="hibernate.current_session_context_class">thread</property> <!--  -->
        <property name="hibernate.hbw2ddl.auto">validate</property> <!--verifica los ficheros de config cuando arrancamos el proyecto-->

        <!-- ficheros de mapeo , 1 por cada una de las clases  -->

        <mapping resource="Departamento.hbm.xml"></mapping>
        <mapping resource="Empleado.hbm.xml"></mapping>

     </session-factory>
 </hibernate-configuration>