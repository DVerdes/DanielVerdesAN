<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibertante Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.Cliente" table="Clientes">
        <id name="clienteId" column="ClienteID">
            <generator class="native"></generator>
        </id>
        <property name="nombre" type="string" column="Nombre"/>
        <property name="apellido" type="string" column="Apellido"/>
        <property name="direccion" type="string" column="Direccion"/>
        <property name="ciudad" type="string" column="Ciudad"/>
        <property name="pais" type="string" column="Pais"/>
        <property name="email" type="string" column="Email"/>
        <property name="telefono" type="string" column="Telefono"/>
        <set name="pedidos" table="Pedidos" cascade="all" lazy="true" >
            <key column="clienteId"></key>
            <one-to-many class="org.example.Pedido"></one-to-many>
        </set>



    </class>
</hibernate-mapping>