<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibertante Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.Subtarea" table="Subtareas">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
       <!-- <property name="idTarea" type="int" column="idTarea"/> -->
        <property name="nombre" type="string" column="nombre"/>
        <many-to-one name="tarea" column="idTarea" not-null="true" insert="false" update="false" lazy="no-proxy"/>

    </class>
</hibernate-mapping>